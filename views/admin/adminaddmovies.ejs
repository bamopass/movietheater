                            <div id="id_select_3D" class="txtWhite btn_selector noselect" style="width: 50px;" onclick="selectTheater('3D')">
                                3D
                            </div>
                            <div id="id_select_4DX" class="txtWhite btn_selector noselect" style="width: 60px;" onclick="selectTheater('4DX')">
                                4DX
                            </div>
                            <div id="id_select_IMAX" class="txtWhite btn_selector noselect" style="width: 80px;" onclick="selectTheater('IMAX')">
                                IMAX
                            </div>
                        </div>
                    </div>
                    <div class="row form_margin">
                        <div class="col-2 txtWhite">Starring</div>
                        <div class="col-4">
                            <textarea
                                name="starring"
                                id="id_starring"
                                style="width: 80%; height: 94px;"
                                placeholder="type here..."
                                class="txtBlue"
                            ></textarea>
                        </div>
                        <div class="col-2 txtWhite">
                            <div class="row" style="padding-left: 15px;">Theater No.</div>
                            <div class="row" style="margin-top: 22px; padding-left: 15px;">Branch</div>
