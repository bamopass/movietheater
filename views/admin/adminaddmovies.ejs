                        <div class="col-2 txtWhite">Theater Type</div>
                        <div class="col-4">
                            <!--  asdasdasdasd -->
                            <div id="id_select_2D" class="txtWhite btn_selector noselect" style="width: 50px;" onclick="selectTheater('2D')">
                                2D
